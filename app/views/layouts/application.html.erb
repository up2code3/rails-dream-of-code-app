<!DOCTYPE html>
<html>
  <head>
    <title><%= content_for(:title) || "Doc Rails" %></title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <meta name="apple-mobile-web-app-capable" content="yes">
    <meta name="mobile-web-app-capable" content="yes">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= yield :head %>

    <link rel="icon" href="/icon.png" type="image/png">
    <link rel="icon" href="/icon.svg" type="image/svg+xml">
    <link rel="apple-touch-icon" href="/icon.png">

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css"
          rel="stylesheet"
          integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH"
          crossorigin="anonymous">

    <%= stylesheet_link_tag :app %>
  </head>

  <body>
    <div class="header">
      <nav class="navbar navbar-expand-lg d-flex justify-content-between align-items-end">
        <div class="d-flex align-items-end">
          <%= image_tag 'doc.png', alt: 'Dream of Code', height: '100' %>
          <ul class="navbar-nav">
            <% if session[:user_id] %>
              <li class='nav-item'>
                <% user = User.find_by(id: session[:user_id]) %>
                <% if user %>
                  <span class="nav-link">Welcome, <%= user.username %>!</span>
                <% end %>
              </li>
            <% end %>
          </ul>
        </div>
        <div class="login-logout">
          <% if session[:user_id] %>
            <%= button_to 'Logout', logout_path, method: :delete,
                  class: 'logout-link nav-link',
                  data: { confirm: 'Are you sure you want to log out?' } %>
          <% else %>
            <%= link_to 'Login', login_path, class: 'logout-link nav-link' %>
          <% end %>
        </div>
      </nav>
    </div>

    <!-- FLASH MESSAGES -->
    <div class="container mt-3">
      <% if flash[:notice] %>
        <div class="alert alert-success alert-dismissible fade show" role="alert">
          <%= flash[:notice] %>
          <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
      <% end %>

      <% if flash[:alert] %>
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
          <%= flash[:alert] %>
          <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
      <% end %>
    </div>

    <div class='container main-container'>
      <%= yield %>
    </div>

    <!-- BOOTSTRAP JS (for dismiss button to work) -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
            integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz"
            crossorigin="anonymous"></script>
  </body>
</html>