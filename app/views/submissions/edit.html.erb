<h1>Edit Submission</h1>

<%= form_with(model: [@course, @submission], local: true) do |form| %>
  <div class="form-group">
    <%= form.label :review_result %>
    <%= form.text_area :review_result, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :reviewed_at %>
    <%= form.datetime_field :reviewed_at, class: "form-control" %>
  </div>

  <div>
    <%= form.submit "Update Submission", class: "btn btn-primary" %>
  </div>
<% end %>